<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MiEstilo" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#132EC7</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="MiEstilo.Grande">
        <item name="android:textSize">18pt</item>
    </style>
    <style name="MiEstilo.Grande.Negrita">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MiEstiloBtn" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#800080</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="MiEstiloBtn.Grande">
        <item name="android:textSize">8pt</item>
    </style>
    <style name="MiEstiloBtn.Grande.Italic">
        <item name="android:textStyle">italic</item>
    </style>
</resources>
